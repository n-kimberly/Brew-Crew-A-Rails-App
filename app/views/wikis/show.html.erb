<h1><%= @wiki.title %>     <%= link_to "", edit_wiki_path(@wiki), class: 'glyphicon glyphicon-pencil' %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
  </div>
  <div class="col-md-4">
    <p> Owner: <%= @wiki.user.email %></p>
    <% if @wiki.private %>
      <p><em> Private </em></p>
    <% else %>
      <p><em> Public </em></p>
    <% end %>
    <%= link_to "", @wiki, method: :delete, class: 'glyphicon glyphicon-trash', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <%if user_is_authorized_to_delete? %>
      <%= render partial: 'collaborations/list', locals: { wiki: @wiki } %>
    <% end %>
  </div>
</div>
