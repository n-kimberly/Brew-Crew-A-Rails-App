<h1><%= @wiki.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
    <p> Private? <%= @wiki.private %></p>
    <p> Author: <%= @wiki.user.email %></p>
    <%= render partial: 'collaborations/list', locals: { wiki: @wiki } %>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%if user_is_authorized_to_delete? %>
      <%= link_to "Delete Post", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
    <% end %>
  </div>
</div>
